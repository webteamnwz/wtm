<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_user_room_info"
	style="@style/WTM_Main_Activity"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<LinearLayout
				android:id="@+id/layout_user_room_info_detail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone" >

				<TextView
					android:id="@+id/textUserRoomInfoTitle"
					style="@style/WTM_User_Room_Info_Title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:layout_marginTop="5dp"
					android:text="Title" />

				<TextView
					android:id="@+id/textUserRoomInfoDesc"
					style="@style/WTM_User_Room_Info_Desc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Desc" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="5dp" >

					<Button
						android:id="@+id/buttonUserRoomInfoCheck"
						style="@style/WTM_Main_Button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/ui_room_checkin"
						android:visibility="gone" />

					<Button
						android:id="@+id/buttonUserRoomInfoOut"
						style="@style/WTM_Main_Button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/ui_room_out"
						android:visibility="gone" />

					<Button
						android:id="@+id/buttonUserRoomInfoDelete"
						style="@style/WTM_Main_Button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/ui_room_delete"
						android:visibility="gone" />
				</LinearLayout>

				<TextView
					android:id="@+id/textRoomInfoManagerLabel"
					style="@style/WTM_User_Room_Info_Checked_Label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="10dp"
					android:text="@string/ui_label_room_manager" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="5dp" >

					<ImageView
						android:id="@+id/imageRoomManagerFbIcon"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/btn_gray" />

					<TextView
						android:id="@+id/textRoomManagerName"
						style="@style/WTM_User_Room_Info_Manager_Name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:text="TextView" />
				</LinearLayout>

				<TextView
					android:id="@+id/textRoomInfoCheckedUserLabel"
					style="@style/WTM_User_Room_Info_Checked_Label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:layout_marginTop="10dp"
					android:text="@string/ui_label_room_checkin_user" />

				<LinearLayout
					android:id="@+id/layoutRoomInfoCheckedUserList"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal" >
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>