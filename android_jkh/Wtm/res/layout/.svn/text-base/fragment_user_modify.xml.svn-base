<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal">

		<TextView
		    android:id="@+id/tv_user_img"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:text="Img"
		    android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/et_user_img"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" >
	
	        <requestFocus />
	    </EditText>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal">

		<TextView
		    android:id="@+id/tv_user_email"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:text="Email"
		    android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/et_user_email"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" >
	
	        <requestFocus />
	    </EditText>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal">

		<TextView
		    android:id="@+id/tv_user_name"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:text="Name"
		    android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/et_user_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" >
	
	        <requestFocus />
	    </EditText>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal">

		<TextView
		    android:id="@+id/tv_user_profile"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:text="Profile"
		    android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/et_user_profile"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" >
	
	        <requestFocus />
	    </EditText>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal">

		<TextView
		    android:id="@+id/tv_user_group"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:text="Group"
		    android:textAppearance="?android:attr/textAppearanceSmall" />

	    <EditText
	        android:id="@+id/et_user_group"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" >
	
	        <requestFocus />
	    </EditText>
	</LinearLayout>

	<Button
	    android:id="@+id/bt_modify"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Modify" />
	
</LinearLayout>
